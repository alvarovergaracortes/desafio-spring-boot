{
    "info": {
        "name": "Desafio Tecnico - Spring boot",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Login usuario",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\",\n    \"roles\": \"Admin\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8082/user/login",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8082",
                    "path": [
                        "user",
                        "login"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"token\", jsonData.token);"
                        ]
                    }
                }
            ]
        },
        {
            "name": "GET - Todas las tareas",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8082/tasks",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8082",
                    "path": [
                        "tasks"
                    ]
                }
            }
        },
        {
            "name": "POST - Crear tarea",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Tarea desde Postman\",\n    \"description\": \"Descripcion de tarea\",\n    \"stateId\": 1,\n    \"userId\": 1\n}"
                },
                "url": {
                    "raw": "http://localhost:8082/tasks",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8082",
                    "path": [
                        "tasks"
                    ]
                }
            }
        },
        {
            "name": "PUT - Actualizar tarea",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Tarea actualizada\",\n    \"description\": \"Nueva descripcion\",\n    \"stateId\": 1,\n    \"userId\": 1\n}"
                },
                "url": {
                    "raw": "http://localhost:8082/tasks/1",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8082",
                    "path": [
                        "tasks",
                        "1"
                    ]
                }
            }
        },
        {
            "name": "DELETE - Eliminar tarea",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8082/tasks/3",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8082",
                    "path": [
                        "tasks",
                        "1"
                    ]
                }
            }
        },
        {
            "name": "GET - Tareas por usuario",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8082/tasks/users/1",
                    "protocol": "http",
                    "host": [
